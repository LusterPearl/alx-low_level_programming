# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

# Rule: recompile only updated source files
$(OBJ): $(SRC)
	$(CC) $(CFLAGS) -c $^ -o $@

# Check if m.h exists
ifeq (,$(wildcard m.h))
$(error m.h not found)
endif
